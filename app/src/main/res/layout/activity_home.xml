<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintVertical_bias="0.1"
        >
        <ImageView
            android:id="@+id/home_profile_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_launcher_background"
            android:src="@drawable/ic_launcher_foreground"
            />
        <TextView
            android:id="@+id/home_profile_github_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SeojinSeojin"
            app:layout_constraintTop_toBottomOf="@+id/home_profile_img"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/home_profile_github_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seojin Kim"
            app:layout_constraintTop_toBottomOf="@+id/home_profile_github_id"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/home_profile_github_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="웃자!"
            app:layout_constraintTop_toBottomOf="@+id/home_profile_github_username"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>